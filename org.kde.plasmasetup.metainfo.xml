<component type="service">
  <id>org.kde.plasmasetup</id>

  <name>Plasma Setup</name>
  <summary>Plasma first run setup tool</summary>

  <metadata_license>FSFAP</metadata_license>
  <project_license>LGPL-2.0-or-later</project_license>

  <description>
    <p>
      The Out-of-the-box (OOTB) experience that greets a user after system installation or when
      starting up a new computer. Guides the user in creating the system&apos;s first user account
      and configuring initial settings.
    </p>
  </description>

  <project_group>KDE</project_group>

  <developer id="org.kde">
    <name translate="no">KDE</name>
    <url>https://kde.org</url>
  </developer>

  <url type="homepage">https://invent.kde.org/plasma/plasma-setup</url>
