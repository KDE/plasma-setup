  <url type="vcs-browser">https://invent.kde.org/plasma/plasma-setup</url>
  <url type="contact">https://go.kde.org/matrix/#/#plasma-setup:kde.org</url>
  <url type="donation">https://kde.org/community/donations/?app=plasma-setup</url>
  <url type="contribute">https://community.kde.org/Get_Involved/</url>

  <launchable type="service">plasma-setup</launchable>

  <icon type="stock">plasmasetup</icon>

  <categories>
